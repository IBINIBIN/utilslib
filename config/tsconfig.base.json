{
  "compilerOptions": {
    "target": "esnext",
    "module": "ESNext",
    "rootDir": "../",
    "moduleResolution": "bundler",
    "paths": {
      "@utilslib/types": ["../packages/types/src"],
      "@utilslib/core": ["../packages/core/src"],
      "@utilslib/dom": ["../packages/dom/src"],
      "@utilslib/vue2": ["../packages/vue2/src"],
      "@utilslib/vue3": ["../packages/vue3/src"],
      "@utilslib/web": ["../packages/web/src"]
    },
    "declaration": false,
    "declarationMap": false,
    "sourceMap": false,
    "outDir": "lib",
    "importsNotUsedAsValues": "remove",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "useUnknownInCatchVariables": true,
    "alwaysStrict": true,
    "noImplicitReturns": true,
    "skipLibCheck": true
  },
  "exclude": ["**/__tests__/**"]
}
