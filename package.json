{
  "name": "@utilslib/monorepo",
  "version": "0.0.1",
  "private": "true",
  "type": "module",
  "description": "",
  "engines": {
    "node": ">=16",
    "pnpm": "8"
  },
  "scripts": {
    "prepare": "husky",
    "dev:doc": "npm -C docsPress run docs:dev",
    "build:doc": "node build/docBuild.js && npm -C docsPress run docs:build",
    "build:buildVscodeSnippetsJson": "node build/buildVscodeSnippetsJson.js",
    "build:code": "cross-env NODE_ENV=production rollup -c",
    "build": "npm run build:code && npm run build:buildVscodeSnippetsJson",
    "build:integration": "npm run build && npm run build:doc",
    "writeMediaTypeMap": "node build/writeMediaTypeMap.js",
    "lint:fix": "eslint --no-error-on-unmatched-pattern --fix -c eslint.config.js",
    "deploy:test": "pnpm -r publish --dry-run --no-git-checks --access public",
    "updateVersion:package": "node prompts/updatePackageVersion.js",
    "createPackage": "node prompts/createPackage.js",
    "test": "jest"
  },
  "devDependencies": {
    "@eslint/compat": "^1.2.7",
    "@rollup/plugin-alias": "^5.0.1",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-typescript": "^11.1.5",
    "@types/fs-extra": "^11.0.4",
    "@types/jest": "^29.5.14",
    "@types/node": "^24.0.10",
    "@typescript-eslint/parser": "^8.24.0",
    "cheerio": "1.0.0-rc.12",
    "codesandbox": "^2.2.3",
    "cross-env": "^7.0.3",
    "eslint": "^9.10.0",
    "eslint-plugin-prettier": "^5.2.3",
    "fs-extra": "^11.2.0",
    "glob": "^10.3.10",
    "globals": "^16.0.0",
    "husky": "^9.1.7",
    "jest": "^30.0.0",
    "lint-staged": "^15.4.3",
    "node-fetch": "^3.3.2",
    "prettier": "^3.3.3",
    "prompts": "^2.4.2",
    "rollup": "^4.1.4",
    "rollup-plugin-clear": "^2.0.7",
    "rollup-plugin-dts": "^6.1.0",
    "rollup-plugin-esbuild": "^6.1.0",
    "ts-jest": "^29.4.0",
    "ts-morph": "^23.0.0",
    "ts-node": "^10.9.2",
    "tslib": "^2.6.2",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.24.0",
    "uuid": "^9.0.1"
  },
  "lint-staged": {
    "*": "npm run lint:fix --"
  }
}
