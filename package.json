{
  "name": "@utilslib/monorepo",
  "version": "0.0.1",
  "private": "true",
  "type": "module",
  "description": "",
  "engines": {
    "node": ">=16",
    "pnpm": "8"
  },
  "scripts": {
    "dev:doc": "typedoc --options config/typedoc.config.js --watch packages/*",
    "build:doc": "node build/docBuild.js && npm -C docsPress run docs:build",
    "build:doc-config": "typedoc --options config/typedoc.config.js",
    "build:buildVscodeSnippetsJson": "node build/buildVscodeSnippetsJson.js",
    "build:code": "cross-env NODE_ENV=production rollup -c",
    "build": "npm run build:code && npm run build:buildVscodeSnippetsJson",
    "build:integration": "npm run build && npm run build:doc",
    "deploy:test": "pnpm -r publish --dry-run --no-git-checks --access public",
    "core:patch": "npm -C packages/core version patch",
    "dom:patch": "npm -C packages/dom version patch",
    "vue2:patch": "npm -C packages/vue2 version patch",
    "vue3:patch": "npm -C packages/vue3 version patch",
    "core:minor": "npm -C packages/core version minor",
    "dom:minor": "npm -C packages/dom version minor",
    "core:major": "npm -C packages/core version major",
    "dom:major": "npm -C packages/dom version major"
  },
  "dependencies": {
    "@babel/core": "^7.23.2",
    "@babel/preset-env": "^7.23.2",
    "cross-env": "^7.0.3",
    "glob": "^10.3.10",
    "rollup-plugin-clear": "^2.0.7",
    "rollup-plugin-dts": "^6.1.0",
    "rollup-plugin-esbuild": "^6.1.0",
    "typedoc": "^0.27.1"
  },
  "devDependencies": {
    "@rollup/plugin-alias": "^5.0.1",
    "@rollup/plugin-babel": "^6.0.4",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^11.1.5",
    "@rollup/plugin-virtual": "^3.0.2",
    "@rollup/pluginutils": "^5.1.0",
    "@types/fs-extra": "^11.0.4",
    "acorn": "^8.12.1",
    "acorn-walk": "^8.3.3",
    "cheerio": "1.0.0-rc.12",
    "codesandbox": "^2.2.3",
    "concurrently": "^9.1.0",
    "eslint": "^9.10.0",
    "fs-extra": "^11.2.0",
    "node-fetch": "^3.3.2",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.3.3",
    "rollup": "^4.1.4",
    "ts-morph": "^23.0.0",
    "tslib": "^2.6.2",
    "typedoc-plugin-mdn-links": "^3.1.0",
    "typescript": "^5.7.2",
    "uuid": "^9.0.1"
  }
}
